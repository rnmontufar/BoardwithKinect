        WindowState="Maximized" MinHeight="680">
    <Grid Margin="0,10,-34,1" x:Name="theGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="164*"/>
        </Grid.ColumnDefinitions>
        <Canvas HorizontalAlignment="Left" Name="canvas1" VerticalAlignment="Top" Background="Blue" Height="0" Width="0">

            <Controls:HoverButton x:Name="kinectButton" ImageSize="100" ImageSource="/Resources/NewFile.png"  ActiveImageSource="/Resources/NewFile.png" TimeInterval="2000" Canvas.Left="16" Canvas.Top="56" Background="#FF898181" />
